<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profile - SymbiEat</title>
  <link rel="stylesheet" href="styles/style.css" />
  <link rel="stylesheet" href="styles/profile.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

<body>
  <nav>
    <a href="/home" style="text-decoration: none; color:inherit;">
      <div class="logo">SymbiEat</div>
    </a>
    <div class="profile">
      <img src="images/default-avatar.svg" alt="Profile" class="profile-img" />
      <div class="dropdown">
        <a href="/home" class="dropdown-item">
          <i class="fas fa-home"></i>
          Home
        </a>
        <a href="/logout" class="dropdown-item">
          <i class="fas fa-sign-out-alt"></i>
          Logout
        </a>
      </div>
    </div>
  </nav>

  <main class="profile-main">
    <div class="profile-header">
      <img src="images/default-avatar.svg" alt="Profile" class="large-profile-img" />
      <h1>
        <%= user.fullName %>
      </h1>
      <p>PRN: <%= user.username %>
      </p>
    </div>

    <section class="orders-section">
      <h2>Currently Reserved</h2>
      <div class="reserved-items" id="reservedItems">
        <!-- Reserved items will be populated by JavaScript -->
      </div>

      <h2>Order History</h2>
      <div class="order-history">
        <div class="order-card">
          <div class="order-header">
            <span class="order-date">March 15, 2024</span>
            <span class="order-status completed">Completed</span>
          </div>
          <div class="order-items">
            <div class="order-item">
              <img src="images/food.jpg" alt="Cheese Burger" />
              <div class="item-details">
                <h3>Cheese Burger</h3>
                <p>₹100</p>
              </div>
            </div>
          </div>
        </div>

        <div class="order-card">
          <div class="order-header">
            <span class="order-date">March 14, 2024</span>
            <span class="order-status completed">Completed</span>
          </div>
          <div class="order-items">
            <div class="order-item">
              <img src="images/food.jpg" alt="Margherita Pizza" />
              <div class="item-details">
                <h3>Margherita Pizza</h3>
                <p>₹200</p>
              </div>
            </div>
            <div class="order-item">
              <img src="images/food.jpg" alt="Loaded Fries" />
              <div class="item-details">
                <h3>Loaded Fries</h3>
                <p>₹90</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      async function fetchReservations() {
        try {
          const response = await fetch('/api/reservations');
          const data = await response.json();
          return data;
        } catch (error) {
          console.error("Error fetching data:", error);
          return null;
        }
      }
      const reservedItems = await fetchReservations();
      console.log(reservedItems);

      // Time limit for reservations in milliseconds (30 minutes)
      const RESERVATION_LIMIT = 30 * 60 * 1000;

      function updateReservedItems() {
        const container = document.getElementById("reservedItems");
        container.innerHTML = "";

        const now = Date.now();

        reservedItems.forEach((item) => {
          const itemDate = new Date(item.date);
          let endTime = (new Date(itemDate.getTime() + item.duration * 60 * 1000)).toISOString();
          endTime = new Date(endTime);
          const timeLeft = endTime - Date.now();

          console.log(endTime);

          if (timeLeft > 0) {
            const minutes = Math.floor(timeLeft / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

            const isUrgent = minutes < 5;

            console.log(minutes,seconds);

            const reservedCard = document.createElement("div");
            reservedCard.className = "reserved-card";
            reservedCard.innerHTML = `
                <div class="reserved-info">
                    <img src="images/food.jpg" alt="${item.name}">
                    <div class="item-details">
                        <h3>${item.name}</h3>
                        <p>${item.quantity} pc (₹${item.price}*${item.quantity})</p>
                    </div>
                </div>
                <div class="timer ${isUrgent ? "urgent" : ""}">
                    ${minutes}:${seconds.toString().padStart(2, "0")} left
                </div>
            `;

            container.appendChild(reservedCard);
          }
        });
      }

      // Update timers every second
      setInterval(updateReservedItems, 1000);

      // Initial update
      updateReservedItems();
    });
  </script>
</body>

</html>